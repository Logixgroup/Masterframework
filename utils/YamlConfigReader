package com.framework.utils;

import org.yaml.snakeyaml.Yaml;
import java.io.FileInputStream;
import java.io.InputStream;
import java.util.Map;
import java.util.Objects;

public final class YamlConfigReader {

    private static Map<String, Object> yamlData;

    private YamlConfigReader() {}

    static {
        loadYaml();
    }

    private static void loadYaml() {
        String path = System.getProperty("user.dir") +
                "/src/test/resources/config.yaml";

        try (InputStream inputStream = new FileInputStream(path)) {
            Yaml yaml = new Yaml();
            yamlData = yaml.load(inputStream);
        } catch (Exception e) {
            throw new RuntimeException("❌ Failed to load config.yaml", e);
        }
    }

    /** Read YAML value via hierarchical key -->
     * Example: get("env.url.base")
     */
    public static Object get(String key) {
        String[] nodes = key.split("\\.");
        Object value = yamlData;

        for (String node : nodes) {
            value = ((Map<String, Object>) value).get(node);
            if (Objects.isNull(value)) {
                throw new RuntimeException("❌ Key not found in YAML: " + key);
            }
        }
        return value;
    }

    /** Read string directly */
    public static String getString(String key) {
        return get(key).toString();
    }

    /** Read integer */
    public static int getInt(String key) {
        return Integer.parseInt(get(key).toString());
    }

    /** Read boolean */
    public static boolean getBoolean(String key) {
        return Boolean.parseBoolean(get(key).toString());
    }

    /** Reload YAML (for parallel/CI) */
    public static synchronized void reload() {
        loadYaml();
    }
}
