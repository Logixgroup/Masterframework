package com.framework.utils.elementutils;

import com.framework.reports.ExtentLogger;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;

public final class ElementUtils {

    private ElementUtils() {}

public static void click(WebDriver driver, By locator) {
        WebElement element = WaitUtils.waitOnVisibility(driver, locator);


        try {
            element.click();
            ExtentLogger.pass("Clicked → " + "Via element);
        } catch (Exception e) {
            System.out.println("Normal click failed, using JS click: " + e.getMessage());
            jsClick(driver, element);
            ExtentLogger.pass("Clicked → " + "cliked via jsClick");
        }
    }

    private static void jsClick(WebDriver driver, WebElement element) {
        JavascriptExecutor js = (JavascriptExecutor) driver;
        js.executeScript("arguments[0].click();", element);
    }
}

    public static void click(WebElement element, String msg) {
        element.click();
        ExtentLogger.pass("Clicked → " + msg);
    }

    public static void type(WebElement element, String text, String msg) {
        element.clear();
        element.sendKeys(text);
        ExtentLogger.pass("Typed '" + text + "' → " + msg);
    }

    public static String getText(WebElement element, String msg) {
        String text = element.getText();
        ExtentLogger.pass("Fetched text → " + msg + " : " + text);
        return text;
    }
}
